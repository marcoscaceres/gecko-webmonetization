[
  {
    "namespace": "manifest",
    "types": [
      {
        "$extend": "Permission",
        "choices": [{
          "type": "string",
          "enum": ["monetization"]
        }]
      }
    ]
  },
  {
    "namespace": "monetization",
    "permissions": ["monetization"],
    "events": [
      {
        "name": "onStart",
        "type": "function",
        "parameters": [
          {
            "name": "sessionId",
            "type": "string"
          },
          {
            "name": "spspResponse",
            "type": "object",
            "properties": {
              "destination_account": {
                "type": "string"
              }
            }
          }
        ]
      },
      {
        "name": "onStop",
        "type": "function",
        "parameters": [
          {
            "name": "sessionId",
            "type": "string"
          }
        ]
      },
      {
        "name": "onPause",
        "type": "function",
        "parameters": [
          {
            "name": "sessionId",
            "type": "string"
          }
        ]
      },
      {
        "name": "onResume",
        "type": "function",
        "parameters": [
          {
            "name": "sessionId",
            "type": "string"
          }
        ]
      }
    ],
    "functions": [
      {
        "name": "completePayment",
        "type": "function",
        "parameters": [
          {
            "name": "sessionId",
            "type": "string"
          },
          {
            "name": "amount",
            "type": "object",
            "properties": {
              "value": {
                "type": "string"
              },
              "assetCode": {
                "type": "string"
              },
              "assetScale": {
                "type": "number"
              }
            }
          },
          {
            "name": "receipt",
            "type": "string",
            "optional": true
          }
        ]
      },
      {
        "name": "refresh",
        "type": "function",
        "async": true,
        "parameters": [
          {
            "name": "sessionId",
            "type": "string"
          }
        ]
      }
    ]
  }
]
